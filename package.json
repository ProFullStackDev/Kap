{
  "name": "focus",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "test": "xo",
    "build": "npm run test && gulp build",
    "start": "DEBUG_FOCUS=1 concurrently --kill-others 'gulp watch' 'electron app'",
    "pack": "npm run build && build --dir; cd dist/mac; zip --symlinks -r -q focus focus.app",
    "dist": "npm run build && build",
    "postinstall": "install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeTheory/focus.git"
  },
  "author": "Matheus Fernandes <npm@matheus.top> (https://matheus.top/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CodeTheory/focus-core/issues"
  },
  "homepage": "https://github.com/CodeTheory/focus-core#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.14.0",
    "concurrently": "^2.2.0",
    "cssnano": "^3.7.4",
    "electron": "^1.3.3",
    "electron-builder": "^6.3.5",
    "electron-reload": "^1.0.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-inject-svg": "^0.1.8",
    "gulp-postcss": "^6.1.1",
    "gulp-pug": "^3.0.4",
    "gulp-uglify": "^2.0.0",
    "postcss-extend": "^1.0.5",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^3.0.0",
    "xo": "^0.16.0"
  },
  "xo": {
    "space": 2,
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0
    },
    "ignores": [
      "app/dist/**"
    ]
  },
  "build": {
    "asar": false,
    "appId": "com.wulkano.focus",
    "category": "public.app-category.productivity",
    "files": [
      "**/*",
      "!src",
      "!main.js"
    ]
  }
}
